# Copy this file to `.env` and fill real values. Do NOT commit secrets.

# PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changeme
POSTGRES_DB=app_db
# Example DATABASE_URL uses the values above; update password accordingly
DATABASE_URL=postgresql+asyncpg://postgres:changeme@db:5432/app_db

# Redis
REDIS_URL=redis://redis:6379/0

# JWT
JWT_ACCESS_SECRET=change_this_to_a_secure_random_value
JWT_REFRESH_SECRET=change_this_to_a_secure_random_value
JWT_ALGORITHM=HS256
JWT_ACCESS_EXPIRE_MINUTES=15
JWT_REFRESH_EXPIRE_MINUTES=1440
